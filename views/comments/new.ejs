<% include ../partials/header %>
<div class="container">
  <div class="row">
      <h1 style="text-align: center">Add New comment on <%= campground.name %> campground</h1>
       <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
          <div class="form-group">

                  <textarea class="form-control" id="comment" name="comment" placeholder="comment" rows="4" cols="100"></textarea>

          </div>

          <div class="form-group">
              <button class="btn btn-sm btn-primary btn-block">Submit!</button>
          </div>
        </form>

        <div class="form-group ">
          <a class="btn btn-sm btn-success" href="/campgrounds">Go Back</a>
        </div>
        </div>
  </div>
</div>
<% include ../partials/footer %>
