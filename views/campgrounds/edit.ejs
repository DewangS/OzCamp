<% include ../partials/header %>
<div class="container">
  <div class="row">

      <h1 class="text-center">Update Campground <%= campground.name%></h1>

    <div class="form-horizontal">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
          <div class="form-group col-sm-12">
                  <label class="col-sm-3 control-label" for="name">Name :</label>
                  <div class="col-sm-7">
                    <input class="form-control" id="name" name="campground[name]" type="text" value="<%= campground.name%>">
                  </div>
          </div>
          <div class="form-group col-sm-12">
                  <label class="col-sm-3 control-label" for="price">Price :</label>
                  <div class="col-sm-7">
                    <input class="form-control" id="price" name="campground[price]" type="number" value="<%= campground.price %>" min="0.01" step="0.01">
                  </div>
          </div>
          <div class="form-group col-sm-12">
                  <label class="col-sm-3 control-label" for="image">Image :</label>
                  <div class="col-sm-7">
                    <input class="form-control" id="image" name="campground[image]" type="text" value="<%= campground.image%>">
                  </div>
          </div>

          <div class="form-group col-sm-12">
                  <label class="col-sm-3 control-label" for="description">Description :</label>
                  <div class="col-sm-7">
                    <textarea class="form-control"  rows="5" cols="50" maxlength="500" id="description" name="campground[description]" type="text" value=""><%= campground.description%></textarea>
                  </div>
          </div>

          <div class="form-group text-center">
            <button class="btn btn-lg btn-primary">Update</button>
          </div>
        </form>
    </div>
    <div class="form-group text-right">
      <a  href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
