<% include ../partials/header %>
<div class="container">
  <div class="row">

      <h1>Create a new Campground</h1>

    <div class="form-horizontal">
      <form action="/campgrounds" method="POST">
        <div class="form-group col-sm-12">
                <label class="col-sm-3 control-label" for="name">Name :</label>
                <div class="col-sm-7">
                  <input class="form-control" id="name" name="campground[name]" type="text" placeholder="Name of the campground">
                </div>
        </div>
        <div class="form-group col-sm-12">
                <label class="col-sm-3 control-label" for="price">Price :</label>
                <div class="col-sm-7">
                  <input class="form-control" id="price" name="campground[price]" type="number" min="0.01" step="0.01">
                </div>
        </div>
        <div class="form-group col-sm-12">
                <label class="col-sm-3 control-label" for="image">Image :</label>
                <div class="col-sm-7">
                  <input class="form-control" id="image" name="campground[image]" type="text" placeholder="Image link">
                </div>
        </div>

        <div class="form-group col-sm-12">
                <label class="col-sm-3 control-label" for="description">Description :</label>
                <div class="col-sm-7">
                  <textarea class="form-control"  rows="5" cols="50" maxlength="500" id="description" name="campground[description]" type="text" placeholder="e.g. This ground offers ..."></textarea>
                </div>
        </div>

        <div class="form-group text-center">
          <button class="btn btn-lg btn-primary">Submit</button>
        </div>
      </form>

        <div class="pull-right">
          <a  href="/campgrounds">Go Back</a>
        </div>
    </div>


  </div>
</div>
<% include ../partials/footer %>
