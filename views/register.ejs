<%include ./partials/header%>

<div class="container">
  <div class="row">

      <h1>Register</h1>

      <div class="form-horizontal">
      <form action="/register" method="POST">


          <div class="form-group col-sm-12">
            <label class="col-sm-5 control-label" for="username">Username :</label>
            <div class="col-sm-4">
                  <input class="form-control" type="text" id="username" name="username" value="" placeholder="username">
            </div>
          </div>

        <div class="form-group col-sm-12">
          <label class="col-sm-5 control-label" for="password">Password :</label>
          <div class="col-sm-4">
            <input class="form-control"  type="password" name="password" value="" placeholder="password">
          </div>
        </div>

        <div class="form-group col-sm-12">
          <label class="col-sm-5 control-label" for="firstName">First Name :</label>
          <div class="col-sm-4">
            <input class="form-control"  type="text" name="firstName" value="" placeholder="First Name">
          </div>
        </div>

        <div class="form-group col-sm-12">
          <label class="col-sm-5 control-label" for="lastName">Last Name :</label>
          <div class="col-sm-4">
            <input class="form-control"  type="text" name="lastName" value="" placeholder="Last Name">
          </div>
        </div>

        <div class="form-group col-sm-12">
          <label class="col-sm-5 control-label" for="email">Email :</label>
          <div class="col-sm-4">
            <input class="form-control"  type="email" name="email" value="" placeholder="Email">
          </div>
        </div>

        <div class="form-group col-sm-12">
          <label class="col-sm-5 control-label" for="avatar">Avatar URL :</label>
          <div class="col-sm-4">
            <input class="form-control"  type="text" name="avatar" value="" placeholder="avatar image link">
          </div>
        </div>
        <div class="form-group col-sm-12">
          <label class="col-sm-5 control-label" for="about">About you :</label>
          <div class="col-sm-7">
            <textarea class="form-control"  rows="5" cols="50" maxlength="500" name="about" value="" placeholder="more details about you.."></textarea>
          </div>
        </div>
        <div class="form-group col-sm-12">
          <label class="col-sm-5 control-label" for="adminCode">Admin Code :</label>
          <div class="col-sm-4">
            <input class="form-control"  type="text" name="adminCode" value="" placeholder="Admin Code">
          </div>
        </div>

        <div class="form-group text-center">
          <button class="btn btn-lg btn-primary">Register</button>
        </div>
      </form>
      </div>


</div>
</div>
<%include ./partials/footer%>
