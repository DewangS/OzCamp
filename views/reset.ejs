<%include ./partials/header%>
<div class="container">
  <div class="row">
    <header class="">
      <h1>Password Reset</h1>
   </header>

      <form class="form-horizontal" action="/reset/<%= token %>" method="POST">
        <legend>Reset Password</legend>
        <div class="form-style">
        <div class="col-md-12">
          <div class="form-group">
            <label class="col-md-4 control-label" for="email">New Password :</label>
            <div class="col-md-8">
                <input class="form-control" type="password" name="password" value="" placeholder="New Password">
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <label class="col-md-4 control-label" for="email">Confirm Password :</label>
            <div class="col-md-8">
                <input class="form-control" type="password" name="confirm" id="passwordRetype" value="" placeholder="Confirm Password">
            </div>
          </div>
        </div>
        <div class="form-group text-center">
          <button class="btn btn-md btn-primary">Update Password</button>
        </div>

          </div>
      </form>

  </div>
</div>
<%include ./partials/footer%>
